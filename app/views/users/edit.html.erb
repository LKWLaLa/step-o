<div class="container"> 
<h4>My Account Settings:</h4>

  <div class="jumbotron col-sm-6">
      <%= form_for(@user) do |f| %>


    <div class="row">
      <div class="col-sm-4">
        <%= f.label :first_name, "First name:"%>
        <%= f.text_field :first_name %>
        <br><br>
         <%= f.label :last_name, "Last name:"%>
        <%= f.text_field :last_name %><br><br>
        <%= f.submit :class => "btn btn-info" %>
      </div>

      <%end%>

    </div><br> <!--row1-->  

    <div class="row">
     <div class="col-sm-12">
         <%= link_to "Change Email/Password or Close Account", 
         edit_user_registration_path(current_user) %>
     </div> 
   </div> <!--row2-->

  </div><!--jumbotron(grey box)-->

</div>


