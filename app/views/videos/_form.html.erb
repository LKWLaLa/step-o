<%= form_for(@video) do |f| %>
  <%= f.label :title, "Title:" %>
  <%= f.text_field :title %>
  <%= f.label :year, "Year:" %>
  <%= f.text_field :year %>
  <%= f.label :url, "URL:" %>
  <%= f.text_field :url %>
  <%= f.label :notes, "Video Notes:" %>
  <%= f.text_field :notes %>
  <%= f.hidden_field :user_id %><br><br>

  Add a new step:<br>
 
  <%= f.fields_for :steps do |s| %>
    <%= s.label :name, "Step Name:"%>
    <%= s.text_field :name %>
    <%= s.label :level_of_mastery, "Current level of mastery (1-10):" %>
    <%= s.text_field :level_of_mastery %>
    <%= s.label :notes, "Step Notes:" %>
    <%= s.text_area :notes %>
    <%= s.hidden_field :user_id, :value => params[:user_id] %><br>
   <br><br>
  <%end%>

  Associate an existing step:<br>

  <%= f.collection_check_boxes :step_ids, current_user.steps.all, :id, :name %><br>

  <%= f.submit %>
<%end%>
