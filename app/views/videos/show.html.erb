<div class="container">
  <div class="panel panel-info">
    <div class="panel-heading">
      <%=@video.title%> <%if !@video.year.nil?%> (<%=@video.year%>) <%end%>
    </div>
    <div class="panel-body">

        <a href="<%=@video.url%>" target="_blank" style="text-decoration: none;">
          <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
          Watch video clip
        </a>
      
      <br><br>

      <div class="col-sm-12 well">Notes:<br> <%=@video.notes%></div>

      <h4>Associated steps:</h4>
        <ol>
          <%@video.steps.each do |step|%>
            <li><%= link_to "#{step.name}", user_step_path(current_user, step)%><br>
            Current level of mastery: <%=step.level_of_mastery%>
              <ul>
                <%step.styles.each do |style|%>
                <span class="label label-primary"><%=style.name%></span>
                <%end%><br><br>
              </ul>
            </li>
          <%end%>
        </ol>

      <button class="btn btn-warning">
        <%= link_to "Edit Video", edit_user_video_path(current_user, @video), style: "color: white; text-decoration: none;" %>
      </button>

    </div><!--panel body-->
  </div> <!--panel-->
</div><!--container-->



