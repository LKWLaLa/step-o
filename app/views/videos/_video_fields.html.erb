<%= form_for(@video) do |f| %>
  
  <%= f.label :title, "Video Title:" %>
  <%= f.text_field :title %>
  <%= f.label :year, "Year:" %>
  <%= f.text_field :year %>
  <%= f.label :url, "URL:" %>
  <%= f.text_field :url %>
  <%= f.label :notes, "Video Notes:" %>
  <%= f.text_field :notes %>
  <%= f.hidden_field :user_id %><br><br>

  Steps: <br>

  <%= f.fields_for :steps do |s| %>
    <% if s.object.persisted? %>
      <%= s.label :name, "Name:"%>
    <%else%>
       <%= s.label :name, "Add New Step:"%>
    <%end%>
    <%= s.text_field :name %>
    <%= s.label :level_of_mastery, "Current level of mastery (1-10):" %>
    <%= s.text_field :level_of_mastery %>
    <%= s.label :notes, "Step Notes:" %>
    <%= s.text_area :notes %>
    <%= s.hidden_field :user_id, :value => params[:user_id] %>
    <%= s.label :_destroy, "Remove This Step", :class => "form-label" if s.object.persisted?%>
    <%= s.check_box :_destroy if s.object.persisted?%><br>
   <br><br>
  <%end%>


  Include another step from library:<br><br>

  <%= f.collection_select(:step_ids, current_user.steps, :id, :name, include_blank: true, selected: nil )%><br><br>

  <%= f.submit %>

<%end%>



