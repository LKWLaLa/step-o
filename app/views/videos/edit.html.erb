<div class="container">
  <%= render 'errors_messages' %>

  <h1 style="display: inline-block">Edit Video:</h1>

  <%= link_to "Cancel / go back", user_video_path(current_user, @video), :class => "pull-right", :style => "padding-top: 2.5em;"%>

  <div class="jumbotron">

    <div class="youtube_container_edit">
       <iframe width="854" height="480" src= "https://www.youtube.com/embed/<%=YoutubeID.from(@video.url) %>" frameborder="0" allowfullscreen></iframe>
    </div>

    <%= render 'video_form'%>

    <%= link_to "Delete Video", user_video_path(current_user, @video), :method => "delete", :class => "text-danger pull-right", data: { confirm: "Delete this from your library?" } %>
    <br><br>


  </div> <!--jumbotron-->
  <%= link_to "Cancel / go back", user_video_path(current_user, @video), :style => "padding-top: 2.5em;"%>
  
</div> <!--container-->
